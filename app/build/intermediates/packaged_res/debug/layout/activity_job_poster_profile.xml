<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context=".activities.JobPoster_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Primary">

            <ImageView
                android:id="@+id/image_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/ic_arrowback"></ImageView>


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/Primary"
            android:padding="20dp">

            <ImageView
                android:id="@+id/iv_Profilepic"
                android:layout_width="149dp"
                android:layout_height="142dp"
                android:src="@drawable/ic_person"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="483dp"
            android:layout_marginTop="30px"
            android:baselineAligned="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_FullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:drawableStart="@drawable/ic_smallperson"
                android:text="Full Name"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:drawableStart="@drawable/ic_email"
                android:text="Email"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:drawableStart="@drawable/ic_smallphone"
                android:text="Phone Number"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_Jobs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:drawableStart="@drawable/baseline_work_24"
                android:text="0"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_AddJob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_button"
                android:backgroundTint="@color/Primary"
                android:text="Add a Job"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/updateAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:background="@drawable/round_border"
                android:backgroundTint="@color/Secondary"
                android:text="Update Account"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_DeleteUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:layout_marginBottom="30px"
                android:background="@drawable/round_button"
                android:backgroundTint="@color/Primary"
                android:text="Delete Account"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout

                android:layout_width="413dp"
                android:layout_height="55dp"
                android:orientation="horizontal"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.998">

                <Button
                    android:id="@+id/btn_Home"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/Primary"
                    android:drawableTop="@drawable/ic_smallhome"
                    android:text="@string/home" />

                <Button
                    android:id="@+id/btn_Notification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/Primary"
                    android:drawableTop="@drawable/nav_notification"
                    android:text="@string/news" />

                <Button
                    android:id="@+id/btn_Jobs"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/Primary"
                    android:drawableTop="@drawable/baseline_business_center_24"
                    android:text="@string/jobs" />

                <Button
                    android:id="@+id/btn_Profile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/Primary"
                    android:drawableTop="@drawable/nav_profile"
                    android:text="@string/profile" />

                <Button
                    android:id="@+id/btn_More"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/Primary"
                    android:drawableTop="@drawable/baseline_list_24"
                    android:text="@string/more" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>

